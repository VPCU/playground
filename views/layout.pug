doctype html
html
  head
    meta(charset="utf-8")
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    title= title
    // Bootstrap core CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous")
    // Document CSS
    link(rel='stylesheet', href='/stylesheets/style.css')
    // JQuery
    script(src='https://code.jquery.com/jquery-3.5.1.min.js' integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=' crossorigin='anonymous')

  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark.mb-4
      .container-fluid
        a.navbar-brand(href='/') 好书值得读
        #navbarCollapse.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-md-0
            li.nav-item
              a.nav-link(href='/') 首页
            li.nav-item
              a.nav-link(href='/books/random') 随机
            li.nav-item
              a.nav-link(href='/category/外国小说') 外国小说
            li.nav-item
              a.nav-link(href='/category/中国古典小说') 中国古典小说
            if user && user.isAdmin
              li.nav-item
                a.nav-link(href='/admin/setting') 管理
          form.d-flex(action='/search' method='get')
            input.form-control.me-2(type='search', name='keyword', placeholder='请输入关键字' required)
            button.btn.btn-outline-success.me-3(type='submit') Search
          if user
            ul.navbar-nav
              li.nav-item
                a.nav-link(href='/editinfo') #{user.username}
              li.nav-item
                a.nav-link(href='/logout') 登出
          else
            ul.navbar-nav
              li.nav-item
                a.nav-link(href='/signup') 注册
              li.nav-item
                a.nav-link(href='/login') 登录

    main.container
      .bg-light.p-5.rounded
        if warningAlert
          .alert.alert-warning(role="alert")= warningAlert
        if successAlert
          .alert.alert-success(role="alert")= successAlert
        block content

    // Bootstrap core JavaScript
    script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js' integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN' crossorigin='anonymous')
