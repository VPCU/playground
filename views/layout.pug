doctype html
html
  head
    meta(charset="utf-8")
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    title= title
    // Bootstrap core CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous")
    // Document CSS
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark.mb-4
      .container-fluid
        a.navbar-brand(href='/') 书店
        #navbarCollapse.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-md-0
            li.nav-item
              a.nav-link(href='/') 首页
            li.nav-item
              a.nav-link(href='#') Link
            li.nav-item
              a.nav-link.disabled(href='#' tabindex='-1' aria-disabled='true') Disabled
          if user
            ul.navbar-nav
              li.nav-item
                a.nav-link(href='#') #{user.username}
              li.nav-item
                a.nav-link(href='/logout') 登出
          else
            ul.navbar-nav
              li.nav-item
                a.nav-link(href='/signup') 注册
              li.nav-item
                a.nav-link(href='/login') 登录

    main.container
      .bg-light.p-5.rounded
        if warning
          .alert.alert-warning(role="alert")= warning
        block content

    // Bootstrap core JavaScript
    script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js' integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN' crossorigin='anonymous')
