extends layout

block content
    form(method='post' action='/admin/addbooks')
        .mb-3
            label.form-label 书籍名
            input.form-control(type='text' name='name')
        .mb-3
            label.form-label 作者
            input.form-control(type='text' name='author')
        .mb-3
            label.form-label 价格
            input.form-control(type='text' name='price')
        .mb-3
            label.form-label 封面图片
            input.form-control(type='text' name='img')
        .mb-3
            label.form-label 购买链接
            input.form-control(type='text' name='url')
        .mb-3
            label.form-label 简介
            textarea.form-control(name='summary')
        .row
            button.btn.btn-secondary.mb-3(type='reset') 重置
            button.btn.btn-primary.mb-3(type='submit') 提交
